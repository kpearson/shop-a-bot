<h1> <%= @item.name %></h1>
<p> <%= @item.description %></p>
<h2>Reviews</h2>
<%= div_for(@item.item_reviews, class: "review") do |review| %>
  <p><%= review.title %></p>
  <p><%= review.body %></p>
<% end %>
<%= link_to "Edit", edit_item_path(@item) %>
<%= link_to "Review", new_item_item_review_path(@item) %>
